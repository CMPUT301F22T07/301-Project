<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Choose the Days Your Shopping Wanted to cover"
        android:textSize="30dp"
        android:textColor="@color/green_pear"></TextView>
    <LinearLayout
        android:id="@+id/start_date_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_LinearLayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Date:"
            android:textColor="@color/green_pear"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/start_date"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:hint="select date:"
            android:minHeight="48dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/end_date_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_LinearLayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End Date:"
            android:textColor="@color/green_pear"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/end_date"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:hint="select date:"
            android:minHeight="48dp" />
    </LinearLayout>
</LinearLayout>