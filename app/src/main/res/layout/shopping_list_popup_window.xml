<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text_broader">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#85A48B"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:background="@drawable/text_broader"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp">

        </TextView>

        <ImageView
            android:id="@+id/shoppingIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="18dp"
            android:layout_toStartOf="@+id/textView18"
            app:srcCompat="@drawable/shopping_list_icon" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:text="Please Choose a Time Period \n For Your Shopping List First"
            android:textColor="@color/black"
            android:textSize="15dp"></TextView>

    </RelativeLayout>

</LinearLayout>