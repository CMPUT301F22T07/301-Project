<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ViewDailyMealPlanActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="52dp">

        <ListView
            android:id="@+id/daily_meals_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <Button
        android:id="@+id/add_daily_meal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="@color/yellow_pear"
        android:text="Add New Meal"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:text="Back "
        android:textAllCaps="false"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/current_daily_meal_plan_date_text"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="21dp"
        android:layout_toStartOf="@+id/add_daily_meal_button"
        android:layout_toEndOf="@+id/back_button"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/light_brown"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>