<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/meal_name_textView"
            android:layout_width="231dp"
            android:layout_height="22dp"
            android:layout_marginTop="60dp"
            android:text="TextView"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/meal_imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/eaten_cooked_status_checkBox"
            android:layout_width="104dp"
            android:layout_height="52dp"
            android:layout_marginTop="103dp"
            android:layout_marginEnd="132dp"
            android:enabled="false"
            android:text="Eaten already?"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/meal_imageView"
            app:layout_constraintTop_toBottomOf="@+id/meal_name_textView" />

        <ImageView
            android:id="@+id/meal_imageView"
            android:layout_width="167dp"
            android:layout_height="165dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="59dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:mipmap/sym_def_app_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>